# MedGuard AI Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# MCP Server Configuration
MCP_PORT=3001

# Primary Agent Configuration
AGENT_TIMEOUT_MS=5000
ENABLE_PATIENT_CONTEXT=true
VERBOSE=true

# API Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# External APIs (No keys required for demo)
# RxNorm API: https://rxnav.nlm.nih.gov/REST/
# FDA OpenFDA API: https://api.fda.gov/

# Database Configuration (Currently using JSON files)
# In production, you might want to configure a real database:
# DATABASE_URL=postgresql://user:password@localhost:5432/medguard
# REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Configuration
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TIMEOUT_HOURS=24
ENABLE_CACHING=true

# External Service Configuration
# SENTRY_DSN=your_sentry_dsn_for_error_tracking